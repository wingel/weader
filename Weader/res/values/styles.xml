<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="item_common_text">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="item_common_title" parent="@style/item_common_text">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="item_feed_title" parent="@style/item_common_title">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="item_common_fav_icon">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="item_common_pubdate" parent="@style/item_common_text">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="item_notselected_pubdate" parent="@style/item_common_pubdate">
        <item name="android:textColor">@color/item_notselected_text</item>
    </style>

    <style name="item_notselected_title" parent="@style/item_common_title">
        <item name="android:textColor">@color/item_notselected_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_selected_title" parent="@style/item_common_title">
        <item name="android:textColor">@color/item_selected_text</item>
    </style>

    <style name="item_selected_pubdate" parent="@style/item_common_pubdate">
        <item name="android:textColor">@color/item_selected_text</item>
    </style>

</resources>