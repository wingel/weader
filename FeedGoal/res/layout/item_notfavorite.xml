	<ScrollView
			android:id="@+id/scroll_view"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
    		android:layout_weight="1"
			android:background="@color/second_color">
		<RelativeLayout
			android:id="@+id/item"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:background="@color/second_color">
		    <TextView
				android:id="@+id/title"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/item_view_title"/>
			<LinearLayout
				android:id="@+id/subtitle"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/title"
				android:orientation="horizontal">
				<TextView android:id="@+id/channel" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
		        	android:ellipsize="marquee"
		        	android:layout_weight="1"
					style="@style/item_view_channel"/>
				<TextView
					android:id="@+id/pubdate"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:ellipsize="marquee"
		        	android:layout_weight="0"
					style="@style/item_view_pubdate"/>
				<ImageView 
		    		android:id="@+id/fav"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					style="@style/item_view_common_padding"
					android:src="@drawable/no_fav"/>
			</LinearLayout>
			<TextView
				android:id="@+id/content"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/subtitle"
				style="@style/item_view_content"/>
		</RelativeLayout>
	</ScrollView>
	<LinearLayout
		android:id="@+id/read_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:paddingTop="5dp"
        android:layout_weight="0"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center">
		<Button
			android:id="@+id/read"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/read_online">
		</Button> 
	</LinearLayout>
</LinearLayout>