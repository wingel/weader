<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="item_common_text">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
	<style name="item_common_title" parent="@style/item_common_text">
        <item name="android:textSize">15dp</item>
    </style>
     <style name="item_common_channel" parent="@style/item_common_text">
        <item name="android:textSize">11dp</item>
    </style>
    <style name="item_common_pubdate" parent="@style/item_common_text">
        <item name="android:textSize">11dp</item>
    </style>
    <style name="item_common_fav_icon">
        <item name="android:paddingRight">15dp</item>
    </style>
	<style name="item_notselected_title" parent="@style/item_common_title">
        <item name="android:textColor">@color/item_notselected_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="item_selected_title" parent="@style/item_common_title">
        <item name="android:textColor">@color/item_selected_text</item>
    </style>
    <style name="item_notselected_favorite_title" parent="@style/item_notselected_title">
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="item_selected_favorite_title" parent="@style/item_selected_title">
        <item name="android:paddingBottom">0dp</item>
    </style>
     <style name="item_notselected_favorite_channel" parent="@style/item_common_channel">
     	<item name="android:textColor">@color/item_notselected_text</item>
     	<item name="android:textStyle">italic</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="item_selected_favorite_channel" parent="@style/item_common_channel">
    	<item name="android:textColor">@color/item_selected_text</item>
    	<item name="android:textStyle">italic</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="item_notselected_pubdate" parent="@style/item_common_pubdate">
        <item name="android:textColor">@color/item_notselected_text</item>
    </style>
    <style name="item_selected_pubdate" parent="@style/item_common_pubdate">
        <item name="android:textColor">@color/item_selected_text</item>
    </style>
    <style name="item_view_common_padding">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="item_view_title" parent="@style/item_view_common_padding">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="item_view_subtitle_text" parent="@style/item_view_common_padding">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="item_view_channel" parent="@style/item_view_subtitle_text">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="item_view_pubdate" parent="@style/item_view_subtitle_text">
        <item name="android:textColor">@color/color1</item>
    </style>
    <style name="item_view_content" parent="@style/item_view_common_padding">
    	<item name="android:paddingTop">10dp</item>
    	<item name="android:textSize">16dp</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:textColorLink">@color/main_color</item>
        <item name="android:textColor">@color/color2</item>
    </style>
</resources>